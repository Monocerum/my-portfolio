---
import Icon from './Icon.astro';
import logoCss from '../images/css-logo.svg';
import logoJs from '../images/js-logo.svg';
import logoHtml from '../images/html-logo.svg';
import logoAstro from '../images/astro-logo.svg';
---
<section>
  <Icon 
    source={logoHtml}
    label="HTML"
    placeholder="HTML Logo"
  />
  <Icon 
    source={logoCss}
    label="CSS"
    placeholder="CSS Logo"
  />
  <Icon 
    source={logoJs}
    label="Javascript"
    placeholder="Javascript Logo"
  />
  <Icon
    source={logoAstro}
    label="Astro"
    placeholder="Astro Logo"
  />
</section>

<style>
  section {
    display: grid;
    grid-template-rows: 1fr;
  }

  @media only screen and (min-width: 600px) {
    section {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
